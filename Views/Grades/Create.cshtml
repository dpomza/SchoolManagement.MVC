@model SchoolManagement.MVC.Data.Grade

@{
    ViewData["Title"] = "Create";
}

<h1>Create Grade</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GradeObtained" class="control-label"></label>
                <input asp-for="GradeObtained" class="form-control" />
                <span asp-validation-for="GradeObtained" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="StudentCourseId" class="control-label">Student / Course</label>
                <select asp-for="StudentCourseId" class ="form-control" asp-items="ViewBag.StudentCourseId"></select>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-dark" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
